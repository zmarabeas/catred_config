{
  // Editor Configuration
  "vim_mode": true,
  "theme": "Catppuccin Macchiato",
  "buffer_font_family": "JetBrains Mono Nerd Font",
  "buffer_font_size": 12,
  "ui_font_family": "JetBrains Mono Nerd Font",
  "ui_font_size": 12,
  
  // Editor behavior
  "auto_save": "on_focus_change",
  "ensure_final_newline_on_save": true,
  "format_on_save": "on",
  "remove_trailing_whitespace_on_save": true,
  "show_whitespaces": "selection",
  "wrap_guides": [80, 120],
  "preferred_line_length": 80,
  "hard_tabs": false,
  "tab_size": 2,
  "indent_guides": {
    "enabled": true,
    "line_width": 1,
    "active_line_width": 2,
    "coloring": "indent_aware"
  },
  
  // UI Configuration
  "show_inline_completions": true,
  "show_completion_documentation": true,
  "completion_documentation_secondary_query_debounce": 300,
  "use_autoclose": true,
  "cursor_blink": false,
  "highlight_corresponding_brackets": true,
  "show_wrap_guides": true,
  "wrap_guides": [80, 120],
  "relative_line_numbers": true,
  "scrollbar": {
    "show": "auto",
    "diagnostics": true,
    "selected_symbol": true,
    "search_results": true
  },
  "gutter": {
    "line_numbers": true,
    "code_actions": true,
    "folds": true
  },
  
  // File and Project Settings
  "project_panel": {
    "button": true,
    "default_width": 240,
    "dock": "left",
    "file_icons": true,
    "folder_icons": true,
    "git_status": true,
    "indent_size": 20,
    "auto_reveal_entries": true
  },
  "outline_panel": {
    "button": true,
    "default_width": 300,
    "dock": "right",
    "file_icons": true,
    "folder_icons": true,
    "indent_size": 20,
    "auto_reveal_entries": false
  },
  "collaboration_panel": {
    "button": false,
    "dock": "left",
    "default_width": 240
  },
  "chat_panel": {
    "button": false,
    "dock": "right",
    "default_width": 240
  },
  
  // Terminal Configuration
  "terminal": {
    "alternate_scroll": "off",
    "blinking": "terminal_controlled",
    "copy_on_select": false,
    "dock": "bottom",
    "default_width": 640,
    "default_height": 320,
    "font_family": "JetBrains Mono Nerd Font",
    "font_size": 12,
    "line_height": "comfortable",
    "option_as_meta": false,
    "button": true,
    "shell": {
      "program": "fish"
    },
    "toolbar": {
      "title": true
    },
    "working_directory": "current_project_directory"
  },
  
  // Language Server Configuration
  "languages": {
    "TypeScript": {
      "language_servers": ["typescript-language-server", "eslint"],
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      }
    },
    "JavaScript": {
      "language_servers": ["typescript-language-server", "eslint"],
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      }
    },
    "Python": {
      "language_servers": ["pylsp"],
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "black",
          "arguments": ["-"]
        }
      }
    },
    "Rust": {
      "language_servers": ["rust-analyzer"],
      "format_on_save": "on"
    },
    "Go": {
      "language_servers": ["gopls"],
      "format_on_save": "on"
    },
    "JSON": {
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      }
    },
    "Markdown": {
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      }
    }
  },
  
  // Git Configuration
  "git": {
    "inline_blame": {
      "enabled": true,
      "delay_ms": 600
    }
  },
  
  // Search Configuration
  "search": {
    "whole_word": false,
    "case_sensitive": false,
    "include_ignored": false,
    "regex": false
  },
  
  // Assistant Configuration
  "assistant": {
    "enabled": true,
    "version": "2",
    "default_model": {
      "provider": "openai",
      "model": "gpt-4"
    }
  },
  
  // Telemetry
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  
  // Experimental Features
  "experimental": {
    "theme_overrides": {}
  }
}