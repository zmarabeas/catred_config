# Ghostty Terminal Configuration - Gruvbox Dark Theme
# Cross-platform terminal configuration for Catred Config

# Font Configuration
font-family = "JetBrains Mono Nerd Font"
font-size = 12

# Color Scheme - Gruvbox Dark
background = 282828
foreground = ebdbb2

# ANSI Colors
palette = 0=282828
palette = 1=cc241d
palette = 2=98971a
palette = 3=d79921
palette = 4=458588
palette = 5=b16286
palette = 6=689d6a
palette = 7=a89984
palette = 8=928374
palette = 9=fb4934
palette = 10=b8bb26
palette = 11=fabd2f
palette = 12=83a598
palette = 13=d3869b
palette = 14=8ec07c
palette = 15=ebdbb2

# Cursor Configuration
cursor-color = d79921
cursor-text = 282828

# Selection Colors
selection-background = d5c4a1
selection-foreground = 282828

# Window Configuration
window-padding-x = 8
window-padding-y = 8
window-decoration = true
window-theme = dark

# Terminal Features
scrollback-limit = 10000
confirm-close-surface = false
copy-on-select = false
mouse-hide-while-typing = true

# Shell Integration
shell-integration = fish
shell-integration-features = cursor,sudo,title

# Performance
macos-non-native-fullscreen = false
gtk-single-instance = false

# Advanced Features
adjust-cell-width = 0
adjust-cell-height = 0
adjust-font-baseline = 0