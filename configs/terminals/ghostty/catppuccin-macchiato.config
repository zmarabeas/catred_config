# Ghostty Terminal Configuration - Catppuccin Macchiato Theme
# Cross-platform terminal configuration for Catred Config

# Font Configuration
font-family = "JetBrains Mono Nerd Font"
font-size = 12

# Color Scheme - Catppuccin Macchiato
background = 24273a
foreground = cad3f5

# ANSI Colors
palette = 0=494d64
palette = 1=ed8796
palette = 2=a6da95
palette = 3=eed49f
palette = 4=8aadf4
palette = 5=c6a0f6
palette = 6=8bd5ca
palette = 7=b8c0e0
palette = 8=5b6078
palette = 9=ed8796
palette = 10=a6da95
palette = 11=eed49f
palette = 12=8aadf4
palette = 13=c6a0f6
palette = 14=8bd5ca
palette = 15=cad3f5

# Cursor Configuration
cursor-color = f4dbd6
cursor-text = 24273a

# Selection Colors
selection-background = f4dbd6
selection-foreground = 24273a

# Window Configuration
window-padding-x = 8
window-padding-y = 8
window-decoration = true
window-theme = dark

# Terminal Features
scrollback-limit = 10000
confirm-close-surface = false
copy-on-select = false
mouse-hide-while-typing = true

# Shell Integration
shell-integration = fish
shell-integration-features = cursor,sudo,title

# Performance
macos-non-native-fullscreen = false
gtk-single-instance = false

# Advanced Features
adjust-cell-width = 0
adjust-cell-height = 0
adjust-font-baseline = 0